{
    "family": "backend",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::008757489742:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::008757489742:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "backend",
            "image": "008757489742.dkr.ecr.us-east-1.amazonaws.com/fitnessflowai-backend:latest",
            "memory": 512,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 5040,
                    "hostPort": 5040,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "MONGO_URI",
                    "value": "mongodb://mongo:27017/workoutdb"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/fitnessflowai-backend",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}